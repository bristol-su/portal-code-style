{
    "name": "bristol-su/portal-code-style",
    "description": "Styles for the Bristol SU Portal",
    "type": "library",
    "require": {
        "php": ">=7.2",
        "friendsofphp/php-cs-fixer": "^2.18",
        "rector/rector": "0.9.16"
    },
    "authors": [
        {
            "name": "Toby Twigger",
            "email": "tobytwigger1@gmail.com"
        }
    ],
    "require-dev": {
        "pheromone/phpcs-security-audit": "^2.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "BristolSU\\CodeStyle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BristolSU\\CodeStyle\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/code-style"
    ]
}
